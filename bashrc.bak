##Archive (*.tar.gz | zip) from given dir
function maketar() {
    tar cvzf "${1%%/}.tar.gz" "${1%%/}/";
}
function makezip() {
    zip -r "${1%%/}.zip" "${1%%/}/";
}
##Auto-EXTRACT based on types  Syntax:  ex <file>
ex () {
        for archive in "$@"; do
                if [ -f "$archive" ] ; then
                        case $archive in
                                *.tar.bz2)   tar xvjf $archive    ;;
                                *.tbz2)      tar xvjf $archive    ;;
                                *.tar.gz)    tar xvzf $archive    ;;
                                *.tgz)       tar xvzf $archive    ;;
                                *.bz2)       bunzip2 $archive     ;;
                                *.rar)       rar x $archive       ;;
                                *.gz)        gunzip $archive      ;;
                                *.tar)       tar xvf $archive     ;;
                                *.zip)       unzip $archive       ;;
                                *.Z)         uncompress $archive  ;;
                                *.7z)        7z x $archive        ;;
                                *.rar)       unrar x $1   ;;
                                *.gz)        gunzip $1    ;;
                                *.tar)       tar xf $1    ;;
                                *.deb)       ar x $1      ;;
                                *.tar.zst)   unzstd $1    ;;
                                *  )         tar czf $1   ;;
                                *  )         tar cf $1   ;;
                                *  )         tar cjf $1   ;;
                                *)           echo "Unrecogized archive '$archive'" ;;
                        esac
                else
                        echo "'$archive' is not a valid file!"
                fi
        done
}
